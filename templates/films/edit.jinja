{% extends 'base.jinja' %}
{% block content %}
    <form action="/films/edit/{{film.id}}" method="POST">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="{{film.title}}"/>
            <label for="genre">Genre</label>
            <input type="text" name="genre" id="genre" value="{{film.genre}}"/>
            <label for="release_date">Release Date</label>
            <input type="text" name="release_date" id="release_date" value="{{film.release_date}}"/>
            <label for="run_time">Run Time</label>
            <input type="number" name="run_time" id="run_time" value="{{film.run_time}}"/>
            <label for="user">User</label>
            <select name="user.id">
            {% for user in users %}
                <option {% if user.id == film.user_id %}
                    selected
                {% endif %}
                value="{{user.id}}" class="text">{{user.name}}</option>
            {% endfor %}
            </select>
            <input type="submit" value="Edit"/>
        </form>
{% endblock content %}